<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zifei.corebeau"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.RUN_INSTRUMENTATION" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:name="com.zifei.corebeau.common.CorebeauApp"
        android:allowBackup="true"
        android:label="@string/app_name" >
        <activity
            android:name=".common.ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".common.ui.MainActivity"
        android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity android:name=".post.ui.PostActivity"
        android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity android:name=".post.ui.CommentActivity"
            android:theme="@android:style/Theme.Dialog"></activity>
        <activity android:name=".my.ui.MyPostActivity"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        
        <activity android:name=".my.ui.UploadActivity"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        
        <activity android:name="com.zifei.corebeau.my.ui.selector.MultiImageSelectorActivity"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        
        <activity android:name="com.zifei.corebeau.my.ui.FollowActivity"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
    </application>

</manifest>
