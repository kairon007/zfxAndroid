<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bar_navy" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:gravity="center_horizontal|center_vertical">
        
    <TextView
        android:id="@+id/iv_qq_login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal|center_vertical" 
        android:background="@drawable/btn_login_qq"
        android:text="QQ授权登陆"
        android:textColor="#FFFFFF"/>
    
     <TextView
        android:id="@+id/iv_account_login"
        android:layout_width="200dp"
        android:layout_height="50dp"
           android:gravity="center_horizontal|center_vertical" 
           android:layout_below="@id/iv_qq_login"
           android:background="@drawable/btn_login_account"
           android:text="账号登陆"
        android:textColor="#FFFFFF"/>
     
      <TextView
        android:id="@+id/iv_register"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/iv_account_login"
          android:text="我要注册"
        android:textColor="#FFFFFF" />
      
      <TextView
        android:id="@+id/iv_find_pass"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/iv_account_login"
        android:text="find password"
        android:textColor="#FFFFFF"
           />
      
      <TextView
        android:id="@+id/iv_guest_login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="游客登录"
        android:textColor="#FFFFFF"
           android:layout_below="@id/iv_find_pass"
            android:gravity="center_horizontal|center_vertical" 
           android:background="@drawable/btn_login_account"/>
        
    </RelativeLayout>

</RelativeLayout>
