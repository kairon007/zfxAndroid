<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <RelativeLayout
        android:id="@+id/gender_setting_rl_male_m"
        style="@style/other_rl_btn"
        >

        <TextView
            style="@style/other_rl_btn_text"
            android:text="male" />

        <ImageView
            android:id="@+id/gender_setting_im_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/item_view_gender_check"
            android:visibility="visible" />
    </RelativeLayout>

    <View style="@style/custom_divider" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <RelativeLayout
        android:id="@+id/gender_setting_rl_female_f"
        style="@style/other_rl_btn"
        >

        <TextView
            style="@style/other_rl_btn_text"
            android:text="female" />

        <ImageView
            android:id="@+id/gender_setting_im_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/item_view_gender_check"
            android:visibility="gone" />
    </RelativeLayout>
 
</LinearLayout>